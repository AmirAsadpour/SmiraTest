<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_small"
    android:paddingBottom="@dimen/spacing_small">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintEnd_toStartOf="@id/valueText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Internet Movie Database" />

    <TextView
        android:id="@+id/valueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleText"
        tools:text="9.8/10" />

    <View
        android:id="@+id/valueBackgroundView"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@drawable/bg_shape_search_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <View
        android:id="@+id/valueView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_shape_rating_value"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@id/valueBackgroundView"
        app:layout_constraintEnd_toEndOf="@id/valueBackgroundView"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/valueBackgroundView"
        app:layout_constraintTop_toTopOf="@id/valueBackgroundView"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>